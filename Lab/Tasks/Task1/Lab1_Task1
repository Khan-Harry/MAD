// ADD function (check undefined arguments)
function add(a, b) {
    if (a === undefined || b === undefined) {
        return "Error: One or more arguments are missing!";
    }
    return a + b;
}

// SUBTRACT function (use ES6 default parameters)
function subtract(a = 0, b = 0) {
    return a - b;
}

// MULTIPLY function (use ES6 rest parameters)
function multiply(...nums) {
    if (nums.length === 0) return "No numbers provided!";
    
    return nums.reduce((product, num) => product * num, 1);
}

// DIVIDE function (use 'arguments' object)
function divide() {
    if (arguments.length < 2) {
        return "Need at least two numbers to divide!";
    }

    let result = arguments[0];
    for (let i = 1; i < arguments.length; i++) {
        if (arguments[i] === 0) {
            return "Error: Division by zero!";
        }
        result /= arguments[i];
    }
    return result;
}

// Testing the functions
console.log("Add:", add(10, 5));
console.log("Add with missing arg:", add(10));

console.log("Subtract:", subtract(20, 8));
console.log("Subtract with one arg:", subtract(20));

console.log("Multiply:", multiply(2, 3, 4));
console.log("Multiply with one arg:", multiply(5));
console.log("Multiply with no arg:", multiply());

console.log("Divide:", divide(100, 2, 5));
console.log("Divide with one arg:", divide(50));
console.log("Divide by zero:", divide(10, 0));
